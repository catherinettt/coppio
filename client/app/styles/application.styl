@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Lato:300,400,700|Exo:100,200,400,700');


body
	background-color: #efefef
	font-family: 'Exo', sans-serif
	padding: 20px
	color: #535353


.logo
	transition: all 1s ease

menu
	list-style: none
	margin: 0
	margin-top: 20px
	padding: 0
	li
		display: inline-block
		margin: 10px 20px
		font-size: 20px
	li:hover
		border-bottom: 1px dashed #333
		cursor: pointer


@media (max-width: 767px)
	body
		padding: 10px
